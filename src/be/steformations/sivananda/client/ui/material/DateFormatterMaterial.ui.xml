<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:m="urn:import:gwt.material.design.client.ui">
	
	<m:MaterialRow margin="20"> <!-- <div> -->
		<m:MaterialColumn grid="s6" offset="s3"> <!-- <span> grid = largeur(1 à 12) -->
			<m:MaterialRow> <!--  inputs -->
				<m:MaterialColumn grid="s3"> <!-- jours -->
					<m:MaterialListBox placeholder="jour" ui:field="dayInput"/>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s3"> <!-- mois -->
					<m:MaterialListBox placeholder="mois" ui:field="monthInput"/>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s3"> <!-- année -->
					<m:MaterialIntegerBox label="année" ui:field="yearInput"/>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s3"> <!--  jours -->
					<m:MaterialTextBox label="locale" ui:field="localeInput"/>
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow> <!--  bouton et résultat -->
				<m:MaterialColumn grid="s3">
					<m:MaterialButton text="formater" ui:field="formatEventSource"/>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s9">
					<m:MaterialLabel ui:field="output"/> <!-- <span> -->
				</m:MaterialColumn>
			</m:MaterialRow>
		</m:MaterialColumn>
	</m:MaterialRow>

</ui:UiBinder> 